{
  "name": "celestial-comet",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "prepare": "husky",
    "sync:diagrams": "node scripts/sync-diagrams.mjs",
    "dev": "npm run sync:diagrams && astro dev",
    "start": "npm run sync:diagrams && astro dev",
    "build": "npm run sync:diagrams && astro build",
    "preview": "astro preview",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/starlight": "^0.37.1",
    "astro": "^5.6.1",
    "sharp": "^0.34.2"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "src/content/docs/_assets/diagrams/**/*.{svg,png,jpg,jpeg,webp}": [
      "npm run sync:diagrams",
      "git add public/images/diagrams"
    ]
  }
}
